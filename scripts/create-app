#!/bin/bash

set -e

if [ -z "$1" ]; then
  echo "Usage: create-app <project-name>"
  exit 1
fi

PROJECT_NAME=$1
GITHUB_USER="arapehl"
TEMPLATE_REPO="app-template"

echo "ðŸš€ Creating new project: $PROJECT_NAME"

# Create a new GitHub repo from the template
gh repo create "$GITHUB_USER/$PROJECT_NAME" \
  --template "$GITHUB_USER/$TEMPLATE_REPO" \
  --private \
  --clone

cd "$PROJECT_NAME"

echo "ðŸ“¦ Installing dependencies..."
pnpm install

echo "âœ… Done! Your new project is ready."
echo "  cd $PROJECT_NAME"
echo "  pnpm dev"
